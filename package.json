  "devDependencies": {
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "park-miller": "^1.0.0",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.5",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
